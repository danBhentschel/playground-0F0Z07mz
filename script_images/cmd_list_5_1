Command[0]="truncate -s 3T /pool/disk1"
Comment[0]="Sparse file created. Now create the loop device."
Command[1]="sudo losetup loop0 /pool/disk1"
Comment[1]="Created a new block device called /dev/loop0"
Command[3]="sudo apt-get install gdisk"
Comment[3]="Now you should be able to run gdisk"
Command[3]="sudo gdisk /dev/loop0"
Comment[3]="Now let's take a look at your new partitions"
Command[4]="sudo partprobe /dev/loop0"
Comment[4]="The OS should know about them now"
Command[5]="lsblk"
